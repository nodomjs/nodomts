{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "noUnusedLocals":false,
      "noUnusedParameters": false,
      "removeComments":true,
      "moduleResolution": "node",
      "module": "commonJs",
      "target": "es6",
      "outDir":"./dist",
      "declaration": true,
      "declarationDir":"./dist/types"
    },
    "include":[
      "./core/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
  }